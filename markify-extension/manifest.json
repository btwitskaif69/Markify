{
    "manifest_version": 3,
    "name": "Markify - Save Bookmarks",
    "version": "1.0.0",
    "description": "Save any webpage to Markify with one click. Organize your bookmarks the modern way.",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "https://www.markify.tech/*",
        "https://markify.tech/*",
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Save to Markify"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "save-bookmark": {
            "suggested_key": {
                "default": "Ctrl+Shift+M",
                "mac": "Command+Shift+M"
            },
            "description": "Save current page to Markify"
        }
    }
}