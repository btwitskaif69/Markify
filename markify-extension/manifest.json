{
    "manifest_version": 3,
    "name": "Markify - Save Bookmarks",
    "version": "1.1.0",
    "description": "Save any webpage to Markify with one click. Quick save, floating button, and smart metadata extraction.",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "https://www.markify.tech/*",
        "https://markify.tech/*",
        "http://localhost:3000/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Save to Markify"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "save-bookmark": {
            "suggested_key": {
                "default": "Alt+Shift+M",
                "mac": "Alt+Shift+M"
            },
            "description": "Save current page (opens popup)"
        },
        "quick-save": {
            "suggested_key": {
                "default": "Alt+Shift+S",
                "mac": "Alt+Shift+S"
            },
            "description": "Quick save current page"
        },
        "toggle-floating-button": {
            "suggested_key": {
                "default": "Alt+Shift+F",
                "mac": "Alt+Shift+F"
            },
            "description": "Toggle floating save button"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content/content.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}