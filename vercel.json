{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "markify.tech"
        }
      ],
      "destination": "https://www.markify.tech/$1",
      "permanent": true
    },
    {
      "source": "/Home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/Home/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/home/",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/login",
      "destination": "/index.html"
    },
    {
      "source": "/signup",
      "destination": "/index.html"
    },
    {
      "source": "/forgot-password",
      "destination": "/index.html"
    },
    {
      "source": "/reset-password/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/verify-email",
      "destination": "/index.html"
    },
    {
      "source": "/dashboard/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/cmd",
      "destination": "/index.html"
    },
    {
      "source": "/blog/new",
      "destination": "/index.html"
    },
    {
      "source": "/blog/(.*)/edit",
      "destination": "/index.html"
    },
    {
      "source": "/shared/bookmark/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/shared/collection/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/search",
      "destination": "/index.html"
    },
    {
      "source": "/((?!assets/|images/|.*\\.(ico|png|jpg|jpeg|svg|webp|gif|woff|woff2|ttf|eot|css|js|map|webmanifest|xml|txt|br|gz)).*)",
      "destination": "/index.html"
    }
  ]
}