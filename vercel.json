{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "markify.tech"
        }
      ],
      "destination": "https://www.markify.tech/$1",
      "permanent": true
    },
    {
      "source": "/Home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/Home/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/home/",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!about|solutions|features|pricing|blog|contact|what-is-markify|privacy|terms|cookies|refund-policy|cookie-settings|assets|images|favicon|site.webmanifest|robots.txt|sitemap.xml).*)",
      "destination": "/index.html"
    }
  ]
}